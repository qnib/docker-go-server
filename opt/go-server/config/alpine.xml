<?xml version="1.0" encoding="utf-8"?>
<cruise xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="cruise-config.xsd" schemaVersion="82">
  <server artifactsdir="artifacts" agentAutoRegisterKey="gocdFTW" commandRepositoryLocation="default" serverId="90b8f281-1479-47ed-b6af-1b9ef89334de" />
  <pipelines group="alpine">
    <pipeline name="alpn-base" template="DockerBuild">
      <materials>
        <git url="https://github.com/qnib/alpn-base.git" />
      </materials>
    </pipeline>
    <pipeline name="alpn-supervisor" template="DockerBuild">
      <materials>
        <git url="https://github.com/qnib/alpn-supervisor.git" />
        <pipeline pipelineName="alpn-base" stageName="BuildStage" materialName="ParentTrigger" />
      </materials>
    </pipeline>
    <pipeline name="alpn-consul" template="DockerBuild">
      <materials>
        <git url="https://github.com/qnib/alpn-consul.git" />
        <pipeline pipelineName="alpn-supervisor" stageName="BuildStage" materialName="ParentTrigger" />
      </materials>
    </pipeline>
    <pipeline name="alpn-rsyslog" template="DockerBuild">
      <materials>
        <git url="https://github.com/qnib/alpn-rsyslog.git" />
        <pipeline pipelineName="alpn-consul" stageName="BuildStage" materialName="ParentTrigger" />
      </materials>
    </pipeline>
    <pipeline name="alpn-kibana4" template="DockerBuild">
      <materials>
        <git url="https://github.com/qnib/alpn-kibana4.git" />
        <pipeline pipelineName="alpn-rsyslog" stageName="BuildStage" materialName="ParentTrigger" />
      </materials>
    </pipeline>
    <pipeline name="alpn-jre8" template="DockerBuild">
      <materials>
        <git url="https://github.com/qnib/alpn-jre8.git" />
        <pipeline pipelineName="alpn-rsyslog" stageName="BuildStage" materialName="ParentTrigger" />
      </materials>
    </pipeline>
    <pipeline name="graphite-api.git" template="DockerBuild">
      <materials>
        <git url="https://github.com/qnib/docker-graphite-api.git" />
        <pipeline pipelineName="alpn-rsyslog" stageName="BuildStage" materialName="ParentTrigger" />
      </materials>
    </pipeline>
    <pipeline name="alpn-jdk8" template="DockerBuild">
      <materials>
        <git url="https://github.com/qnib/alpn-jdk8.git" />
        <pipeline pipelineName="alpn-rsyslog" stageName="BuildStage" materialName="ParentTrigger" />
      </materials>
    </pipeline>
  </pipelines>
  <templates>
    <pipeline name="DockerBuild">
      <stage name="BuildStage">
        <jobs>
          <job name="BuildJob">
            <tasks>
              <task>
                <pluginConfiguration id="script-executor" version="1" />
                <configuration>
                  <property>
                    <key>script</key>
                    <value>set -ex&#xD;
&#xD;
/opt/qnib/gocd/tasks/docker/prebuild.sh</value>
                  </property>
                </configuration>
                <runif status="passed" />
              </task>
              <task>
                <pluginConfiguration id="script-executor" version="1" />
                <configuration>
                  <property>
                    <key>script</key>
                    <value>set -ex&#xD;
&#xD;
/opt/qnib/gocd/tasks/docker/build.sh</value>
                  </property>
                </configuration>
                <runif status="passed" />
              </task>
              <task>
                <pluginConfiguration id="script-executor" version="1" />
                <configuration>
                  <property>
                    <key>script</key>
                    <value>set -ex&#xD;
&#xD;
/opt/qnib/gocd/tasks/docker/postbuild.sh</value>
                  </property>
                </configuration>
                <runif status="passed" />
              </task>
              <task>
                <pluginConfiguration id="script-executor" version="1" />
                <configuration>
                  <property>
                    <key>script</key>
                    <value>set -ex&#xD;
&#xD;
/opt/qnib/gocd/tasks/docker/publish.sh</value>
                  </property>
                </configuration>
                <runif status="passed" />
              </task>
            </tasks>
          </job>
        </jobs>
      </stage>
    </pipeline>
  </templates>
  <environments>
    <environment name="latest">
      <environmentvariables>
        <variable name="DOCKER_TAG">
          <value>latest</value>
        </variable>
      </environmentvariables>
      <pipelines>
        <pipeline name="alpn-base" />
        <pipeline name="alpn-consul" />
        <pipeline name="alpn-jdk8" />
        <pipeline name="alpn-jre8" />
        <pipeline name="alpn-kibana4" />
        <pipeline name="alpn-rsyslog" />
        <pipeline name="alpn-supervisor" />
        <pipeline name="graphite-api.git" />
      </pipelines>
    </environment>
  </environments>
</cruise>

